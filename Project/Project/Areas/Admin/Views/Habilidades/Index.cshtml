@model List<Model.Habilidad>
@{
    ViewBag.Title = "Habilidades";
}

<div id="experiencia" class="page">

    <h1 class="page-header remove-margin">
        <a class="btn btn-primary pull-right" href="~/admin/habilidades/crud">Agregar</a>
        @ViewBag.Title
    </h1>

    <table class="table table-striped table-condensed">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Dominio</th>
                <th>Editar</th>
                <th>Eliminar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var hab in Model)
            {
                <tr>
                    <td>@hab.Nombre</td>
                    <td>
                        <div class="progress">
                            <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: @(hab.Dominio + "%");">
                                @hab.Dominio %
                            </div>
                        </div>
                    </td>
              
                    <td><a class="btn btn-xs btn-primary btn-block" href="~/admin/habilidades/crud/@hab.id"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a></td>
                    <td><a class="btn btn-xs btn-danger btn-block" href="~/admin/habilidades/delete?id=@hab.id"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a></td>
                    <!-- También podía usarse: /*Url.Action("Delete", "Experiencia", new { id = exp.id })*/-->
                </tr>
            }
        </tbody>
    </table>
</div>