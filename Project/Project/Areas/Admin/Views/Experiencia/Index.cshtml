@model List<Model.Experiencia>
@{
    int tipo = ViewBag.tipo;
}

<div id="experiencia" class="page">

    <h1 class="page-header remove-margin">
        <a class="btn btn-primary pull-right" href="~/admin/experiencia/crud?tipo=@tipo">Agregar</a>
        @ViewBag.Title
    </h1>

    <table class="table table-striped table-condensed">
        <thead>
            <tr>
                <th>@(tipo == 1 ? "Empresa" : "Universidad/Empresa")</th>
                <th>@(tipo == 1 ? "Cargo" : "Título")</th>
                <th>Desde</th>
                <th>Hasta</th>
                <th>Descripción</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var exp in Model)
            {
                <tr>
                    <td>@exp.Nombre</td>
                    <td>@exp.Titulo</td>
                    <td>@exp.Desde</td>
                    <td>@exp.Hasta</td>
                    <td>@exp.Descripcion</td>
                    <td><a class="btn btn-xs btn-primary btn-block" href="~/admin/experiencia/crud/@exp.id">Editar</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>