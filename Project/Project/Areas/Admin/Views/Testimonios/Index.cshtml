@model List<Model.Testimonio>
@{
    ViewBag.Title = "Testimonios";
}

<div id="testimonio" class="page">

    <h1 class="page-header remove-margin">
        @ViewBag.Title
    </h1>

    <table class="table table-striped table-condensed">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>IP</th>
                <th>Fecha</th>
                <th style="width: 400px;">Comentario</th>
                <th style="width: 30px;">Editar</th>
                <th style="width: 30px;">Eliminar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tes in Model)
            {
                <tr>
                    <td>@tes.Nombre</td>
                    <td>@tes.IP</td>
                    <td>@tes.Fecha</td>
                    <td>@tes.Comentario</td>
                    <td><a style="width: 50px;" class="btn btn-xs btn-primary btn-block" href="~/admin/testimonios/crud/@tes.id"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a></td>
                    <td><a style="width: 50px;" class="btn btn-xs btn-danger btn-block" href="~/admin/testimonios/delete?id=@tes.id"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a></td>
                    <!-- También podía usarse: /*Url.Action("Delete", "Experiencia", new { id = exp.id })*/-->
                </tr>
            }
        </tbody>
    </table>
</div>